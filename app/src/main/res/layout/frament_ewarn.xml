<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EWarnDrillFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_centerVertical="true"
            android:textColor="@color/item_group_black"
            android:textSize="15sp"
            android:text="经度" />

        <com.taide.ewarn.weight.ClearableEditText
            android:drawablePadding="20dp"
            android:id="@+id/ew_lon_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end"
            android:text="123.5"
            android:singleLine="true"
            android:textColor="@color/item_group_edt"
            android:paddingRight="10dp"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/item_group_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_centerVertical="true"
            android:textColor="@color/item_group_black"
            android:textSize="15sp"
            android:text="纬度" />

        <com.taide.ewarn.weight.ClearableEditText
            android:drawablePadding="20dp"
            android:id="@+id/ew_lat_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end"
            android:text="23.5"
            android:singleLine="true"
            android:textColor="@color/item_group_edt"
            android:paddingRight="10dp"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/item_group_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_centerVertical="true"
            android:textColor="@color/item_group_black"
            android:textSize="15sp"
            android:text="深度" />

        <com.taide.ewarn.weight.ClearableEditText
            android:drawablePadding="20dp"
            android:id="@+id/ew_dep_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end"
            android:text="0"
            android:singleLine="true"
            android:textColor="@color/item_group_edt"
            android:paddingRight="10dp"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/item_group_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_centerVertical="true"
            android:textColor="@color/item_group_black"
            android:textSize="15sp"
            android:text="震级" />

        <com.taide.ewarn.weight.ClearableEditText
            android:drawablePadding="20dp"
            android:id="@+id/ew_mag_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end"
            android:text="6.0"
            android:singleLine="true"
            android:textColor="@color/item_group_edt"
            android:paddingRight="10dp"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/set_ewarn_btn"
            style="@style/Button.Style"
            android:background="@drawable/xui_config_bg_blue_btn"
            android:text="发送预警演练" />

    </LinearLayout>

</LinearLayout>